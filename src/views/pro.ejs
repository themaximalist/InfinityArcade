<%- include("header.ejs") %>

<div
    class="w-full text-center flex items-center justify-between lg:justify-center gap-4 px-2 lg:px-0"
>
    <a href="/" class="flex items-center gap-2">
        <img
            src="/images/logo.png"
            alt="Infinity Arcade"
            class="w-6 lg:w-8 opacity-60"
        />
        <div
            href="/"
            class="bg-gradient-to-br from-white to-gray-400 text-transparent bg-clip-text text-center py-4 text-xs lg:text-sm opacity-60 tracking-wider inline-block"
        >
            Infinity Arcade
        </div>
    </a>
    <div class="flex justify-center md:absolute md:right-4">
        <a href="/login" class="text-purple-500 hover:text-purple-400 text-xs lg:text-sm"> Login </a>
    </div>
</div>

<div class="container mx-auto text-white max-w-4xl my-4 mt-20 px-4">
    <h1 class="text-4xl font-bold my-4 text-purple-500">
        Infinity Arcade Pro
    </h1>
    <p class="prose">
        <span class="text-purple-200">Unlock special features</span>
        <ul class="my-4 ml-4 md:ml-8 text-white">
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-move">
                <div class="w-2 h-2 bg-white"></div>
                Improved game logic with GPT-4
            </li>
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-wait">
                <div class="w-2 h-2 bg-white"></div>
                Faster games
            </li>
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-zoom-in">
                <div class="w-2 h-2 bg-white"></div>
                Longer games
            </li>
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-copy">
                <div class="w-2 h-2 bg-white"></div>
                Save &amp; load previous games
            </li>
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-none">
                <div class="w-2 h-2 bg-white"></div>
                Create private games
            </li>
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-crosshair">
                <div class="w-2 h-2 bg-white"></div>
                Full control over game creation
            </li>
            <li class="flex gap-4 items-center hover:text-purple-400 py-1 cursor-fun">
                <div class="w-2 h-2 bg-white"></div>
                More Fun!
            </li>
        </ul>

        <button class="bg-purple-500  hover:bg-purple-600 transition-colors text-white px-6 py-4 rounded-lg mt-4 w-full md:w-auto">
            <a href="javascript:none" class="pointer-events-none" id="order-button">
                Purchase for $8
            </a>
        </button>
        <div class="w-full text-xs mt-2 md:w-auto md:inline-block md:mt-0 text-gray-300">
            One-time purchase
        </div>
    </p>

</div>
<script>
    document.addEventListener("ia-loaded", (e) => {
        console.log("IA Loaded");
        const CHECKOUT_LINK = `<%- STRIPE_PURCHASE_LINK %>?client_reference_id=${window.ia.session_id}`;
        const orderButton = document.getElementById("order-button");
        orderButton.href = CHECKOUT_LINK;
        orderButton.classList.remove("pointer-events-none");
    });
</script>
