<%- include("header.ejs") %>

<div class="w-full text-center flex items-center justify-between lg:justify-center gap-4 px-2 lg:px-0">
    <a href="/" class="flex items-center gap-2">
        <img src="/images/logo.png" alt="Infinity Arcade" class="w-6 lg:w-8 opacity-60" />
        <div href="/" class="bg-gradient-to-br from-white to-gray-400 text-transparent bg-clip-text text-center py-4 text-xs lg:text-sm opacity-60 tracking-wider inline-block">
            Infinity Arcade
        </div>
    </a>
</div>

<div class="container mx-auto text-white max-w-4xl my-4 mt-20 px-4 flex flex-col gap-8">
    <div>
        <h1 class="text-4xl font-bold my-4 text-yellow-500">Articles</h1>
    </div>
    <div class="flex flex-col gap-0 divide-y divide-gray-700">
        <% articles.forEach(article => { %>
            <article class="py-16">
                <h2 class="text-2xl font-bold text-yellow-400 mb-2">
                    <a href="/article/<%= article.slug %>" class="hover:underline"><%= article.title %></a>
                </h2>
                <p class="text-gray-300 mb-4"><%= article.description %></p>
                <div class="prose prose-invert py-2 flex flex-col gap-6 leading-relaxed article-content">
                    <%- article.contentHtml.substring(0, 300) %>...
                </div>
                <a href="/article/<%= article.slug %>" class="text-yellow-500 hover:underline">Read more</a>
            </article>
        <% }); %>
    </div>
</div>

<%- include("scripts.ejs") %>
<%- include("footer.ejs") %>
